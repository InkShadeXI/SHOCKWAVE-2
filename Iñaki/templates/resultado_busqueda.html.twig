{% if usuarios is not empty %}
    <ul>
        {% for usuario in usuarios %}
            <li>
                <a href="{{ path('perfil', { 'id': usuario.IdUsuario }) }}">
                    <div>
                        {{ usuario.NombreUsuario }}
                        {{ usuario.CorreoUsuario }}                        
                    </div>
                </a>
            </li>
        {% endfor %}
    </ul>
{% else %}
    <h3>No se encontraron usuarios</h3>
{% endif %}
