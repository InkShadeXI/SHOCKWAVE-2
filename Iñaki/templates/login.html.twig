<script>
    $(document).ready(function () {
        var color = localStorage.getItem('color') || "black";
        var backgroundImageUrl = localStorage.getItem('backgroundImageUrl') || "{{ asset('ruta/de/la/imagen.jpg') }}";

        $("body").css("background-image", "url(" + backgroundImageUrl + ")");
        $("body").css("background-color", color);
        if (color === "black") {
            $("h1, p, div").css("color", "white");
            $("#contenedor").css("background-color", "#1a1a1a");
            $(".button").css("border-color", "white");
        } else {
            $("h1, p, div").css("color", "black");
            $("#contenedor").css("background-color", "white");
            $(".button").css("border-color", "black");
        }

        $("button").click(function () {
            if (color == "black") {
                color = "white";
                backgroundImageUrl = "none";
            } else {
                color = "black";
                backgroundImageUrl = "{{ asset('IMG/fondo.jpg') }}";
            }
            localStorage.setItem('color', color);
            localStorage.setItem('backgroundImageUrl', backgroundImageUrl);
            $("body").css("background-image", backgroundImageUrl);
            $("body").css("background-color", color);
            if (color === "black") {
                $("h1, p, div").css("color", "white");
                $("#contenedor").css("background-color", "#1a1a1a");
                $(".button").css("border-color", "white");
            } else {
                $("h1, p, div").css("color", "black");
                $("#contenedor").css("background-color", "white");
                $(".button").css("border-color", "black");
            }
        });
    });
</script>
